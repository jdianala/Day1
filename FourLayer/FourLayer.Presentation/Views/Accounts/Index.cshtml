@model IEnumerable<FourLayer.Services.Models.AccountDTO>

@{
    ViewBag.Title = "Index";
}

@Scripts.Render("~/Scripts/App/MyScripts")

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Username
        </th>
        <th>
            Account Number
        </th>
        <th>
            Account Type
        </th>
        <th>
            Balance
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balance)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AccountNumber }) |
            @Html.ActionLink("Details", "Details", new { id=item.AccountNumber }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AccountNumber })
        </td>
    </tr>
}

</table>
